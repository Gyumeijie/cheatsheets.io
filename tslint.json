{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "jsRules": {
        // Don't be so strict about how object literal keys are sorted.
        "object-literal-sort-keys": false
    },
    "rules": {
        // Allow interfaces even if they're not prefixed with 'I' (eg, 'IUser').
        "interface-name": false,
        // Don't be so strict about how object literal keys are sorted.
        "object-literal-sort-keys": false,
        // Don't require the 'public' keyword.
        "member-access": [true, "no-public"],
        // Don't enforce curlies
        "curly": false
    },
    "rulesDirectory": []
}
